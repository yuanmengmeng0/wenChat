/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.selection{
  position: relative;
  top: 150rpx;
  font-size: 33rpx;
  border: 1rpx solid blueviolet;
  width: 600rpx;
  height: 300rpx;
}
.selection .line{
  line-height: 100rpx;
  border-bottom: 1rpx solid midnightblue;
  width: 520rpx;
  margin-left: 80rpx;
}
.selection .line:last-child{
  border-bottom: none;
}
.selection .line:before {
	content: '>';
	float: right;
	color: white;
	margin-left: 20rpx;
}